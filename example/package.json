    "prebuild": "expo prebuild",
    "run:android": "expo run:android",
    "run:ios": "expo run:ios",
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios"
  },
  "dependencies": {
    "@react-native-picker/picker": "2.7.5",
