    "expo": "~51.0.0",
    "expo-build-properties": "~0.12.0",
    "expo-system-ui": "~3.0.7",
    "react": "18.2.0",
    "react-native": "npm:react-native-tvos@0.74.5-0",
    "react-native-modal": "13.0.1",
    "react-native-orientation-locker": "1.7.0",
