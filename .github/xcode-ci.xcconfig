//
// Xcode CI Configuration
// Optimized build settings for GitHub Actions runners
//

// Architecture Optimization - Only build for simulator (massive time savings)
ARCHS = x86_64
VALID_ARCHS = x86_64
ONLY_ACTIVE_ARCH = YES

// Debug Build Optimizations
DEBUG_INFORMATION_FORMAT = dwarf
COMPILER_INDEX_STORE_ENABLE = NO
SWIFT_COMPILATION_MODE = wholemodule
ENABLE_TESTABILITY = NO

// Build Performance
GCC_OPTIMIZATION_LEVEL = 0
SWIFT_OPTIMIZATION_LEVEL = -Onone
ENABLE_BITCODE = NO

// Disable unnecessary features for CI
ENABLE_PREVIEWS = NO
ASSETCATALOG_COMPILER_GENERATE_SWIFT_API_CODE = NO
